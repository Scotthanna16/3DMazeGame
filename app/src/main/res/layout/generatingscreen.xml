<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_2">

    <Button
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/material_dynamic_neutral60"
        android:text="BACK"
        android:textColor="#000" />

    <TextView
        android:id="@+id/Message"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@id/backbutton"
        android:gravity="center"
        android:text="You are about to enter the labyrinth"
        android:textColor="@color/white"
        android:textSize="60sp" />

    <Spinner
        android:id="@+id/Robot"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/Message"
        android:layout_marginStart="35dp"


        android:layout_marginTop="140dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/white" />

    <Spinner
        android:id="@+id/Driver"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/Message"

        android:layout_marginLeft="39dp"
        android:layout_marginTop="140dp"


        android:layout_marginBottom="80dp"
        android:layout_toRightOf="@id/Robot"
        android:backgroundTint="@color/white"
        />

    <ProgressBar

        android:id="@+id/ProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Driver"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Driver"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="85dp"

        android:text="Loading Complete"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/noselection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_below="@+id/Message"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="30dp"

        android:visibility="invisible"
        android:text="Please choose Robot type and Driver type" />
</RelativeLayout>