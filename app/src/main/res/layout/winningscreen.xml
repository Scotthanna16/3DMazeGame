<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1">
    <Button
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"

        android:text="BACK"
        android:textColor="#000"
        android:backgroundTint="@color/material_dynamic_neutral60"/>

    <TextView

        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="224dp"
        android:gravity="center"
        android:text="You Escaped the Maze!"
        android:textColor="#000"
        android:textSize="70sp"
        android:layout_below="@id/backbutton"

        />

    <TextView
        android:id="@+id/Pathlength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_marginStart="85dp"
        android:text="Path Length:0"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="40sp"
        android:visibility="invisible"


        />

    <TextView
        android:id="@+id/EnergyConsumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Pathlength"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Energy Consumption:0"
        android:textColor="#000"


        android:textSize="40sp"
        android:visibility="invisible" />

</RelativeLayout>